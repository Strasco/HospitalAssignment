<Window x:Class="EssensysHospitalWPF.Pages.RemoveDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EssensysHospitalWPF.Pages"
        mc:Ignorable="d"
        Title="RemoveDoctorWindow" Height="450" Width="800" Background="#FF13BCD6">
    <Grid>
        <Button Content="RemoveDoctor" HorizontalAlignment="Left" Margin="36,92,0,0" VerticalAlignment="Top" Height="42" Width="87" Click="DeleteDoctor"/>
        <Label Content="Introdu ID-ul doctorului pe care vrei sa il stergi" HorizontalAlignment="Left" Margin="36,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="idTextBox" HorizontalAlignment="Left" PreviewTextInput="NumberValidationTextBox" Margin="36,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <RichTextBox x:Name="errorTextBox" Margin="328,38,187,321" IsEnabled="False" Foreground="Red">
            <FlowDocument/>
        </RichTextBox>
        <Button x:Name="backBtn" Content="Inapoi" HorizontalAlignment="Left" Margin="716,377,0,0" VerticalAlignment="Top" Height="37" Width="57" Click="backBtn_Click"/>

    </Grid>
</Window>
